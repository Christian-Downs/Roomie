@model Roomie.Models.UserProfile

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}



<div>
    @*<h4>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
    <hr />*@
    <div class="Profile-Card">
        <div class="Image-Info">
            <div class="Profile-Image-Div">
                @Html.Action("Details", "Photos", new { id = Model.PhotoID, cssClass = "Profile-Image" })
            </div>
            <div class="Profile-Info">
                <div class="Profile-Name">
                    @Model.FirstName @Model.LastName
                </div>
                <div class="Profile-City">
                    City: @(Model.City)
                </div>
                <div class="Profile-Property Has-Property@(Model.PropertyBool.ToString())">
                    @if (Model.PropertyBool)
                    {
                        <text>Has Property</text>
                    }
                    else
                    {
                        <text>Looking for property</text>
                    }
                </div>
            </div>
        </div>
        <div class="Profile-Description">
            @Model.Description
        </div>
        <div class="Profile-Buttons-Div">
            <div class="col-md-4 Profile-Buttons">
                <button class="Skip-Button" onclick="submitSkip()">
                    Skip
                </button>
            </div>
            <div class="col-md-4 Profile-Buttons">
                <button class="Favorite-Button" onclick="submitFavorite()">
                    Favorite
                </button>
            </div>
            <div class="col-md-4 Profile-Buttons">
                <button class="Like-Button" onclick="submitLike()">
                    Like
                </button>
            </div>
        </div>
    </div>

